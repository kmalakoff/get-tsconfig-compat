{
	"compilerOptions": {
		"target": "ES3",
		"jsx": "react-native",
		"module": "System",
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"jquery": ["./node_modules/jquery/dist/jquery"] // this mapping is relative to "baseUrl"
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src", "test", "node_modules/react-native"]
}
