{
  "name": "get-tsconfig-compat",
  "version": "2.1.1",
  "description": "Portable version of get-tsconfig for earlier versions of node.js",
  "keywords": [
    "tsconfig.json",
    "tsconfig",
    "get-tsconfig"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:kmalakoff/get-tsconfig-compat.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index-esm.js",
      "require": "./dist/cjs/index-cjs.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/cjs/index-cjs.js",
  "types": "dist/cjs/index-cjs.d.cts",
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "tsds build",
    "format": "biome check --write --unsafe",
    "test": "mocha --no-timeouts test/**/*.test.*",
    "test:engines": "nvu engines tsds test:node --no-timeouts",
    "version": "tsds version"
  },
  "dependencies": {
    "core-js": "*",
    "get-tsconfig": "*",
    "is-absolute": "*",
    "path-posix": "*"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.7",
    "slash": "^1.0.0"
  },
  "engines": {
    "node": ">=0.8"
  },
  "tsds": {
    "source": "src/index-esm.ts"
  }
}
